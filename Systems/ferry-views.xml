<PropertyList>

	<chase-distance-m type="double">-400.0</chase-distance-m>

	<!-- Views section -->
	<view n="0">
		<name>Bridge View</name>
		<type>lookfrom</type>
		<internal type="bool">true</internal>
		<config>
			<x-offset-m>0.0</x-offset-m><!-- right -->
			<y-offset-m>26.05</y-offset-m><!-- up -->
			<z-offset-m>-56.878</z-offset-m><!-- back -->
			<pitch-offset-deg>-2</pitch-offset-deg>
			<default-field-of-view-deg>45</default-field-of-view-deg>
		</config>
	</view>

    <view n="1">
      <config>
        <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
      </config>
    </view>

    <view n="2">
      <config>
        <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
      </config>
    </view>

    <view n="3">
