<PropertyList include="common.xml">

	<sim include="Systems/ferry-views.xml">

		<description>Multiplayer Lodi - ferry on the lake of constance.</description>
		<author>Lake of Contance Hangar, Marc Kraus</author>
		<status>alpha</status>
		<aircraft-version>0.0.1</aircraft-version>

		<flight-model>null</flight-model>

		<presets>
			<onground>true</onground>
		</presets>

		<startup>
			<splash-texture>Aircraft/MPCarrier/lodi-splash.png</splash-texture>
		</startup>

		<sound>
			<path>Aircraft/MPCarrier/Sounds/ferry-sound.xml</path>
		</sound>

		<model>
			<path>Aircraft/MPCarrier/Models/mp-lodi.xml</path>
		</model>

		<hud>
			<path n="1">Aircraft/MPCarrier/Systems/LSO.xml</path>
			<visibility n="1">true</visibility>
			<font>
				<size type="float">10.0</size>
			</font>
		</hud>

		<!-- This aircraft is pointless without the lodi_demo scenario. -->
		<ai>
			<enabled type="bool">true</enabled>
			<scenario n="100">Lodi_Tabor_demo</scenario>
		</ai>

		<mp-carriers>
			<lodi-callsign type="string"></lodi-callsign>
		</mp-carriers>
	</sim>

	<controls>
		<rudder-pos-deg type="float"> 0.0 </rudder-pos-deg>
		<speed-kts type="float"> 0.0 </speed-kts>
	</controls>

	<surface-positions>
		<!-- These will be (ab)used for transmitting rudder-deg and speed-kts. -->
		<rudder-pos-norm type="float"> 0.0 </rudder-pos-norm>
		<flap-pos-norm type="float"> 0.0 </flap-pos-norm>
	</surface-positions>


	<nasal>
    <sound>
			<file>Aircraft/MPCarrier/Sounds/ferry-sound.nas</file>
    </sound>
		<!-- Nasal Carrier View -->
		<CarrierControl>
			<file>Aircraft/MPCarrier/Systems/commander.nas</file>
			<script>
				var carrier_name = "Lodi";
			</script>
		</CarrierControl>
		<approachview>
			<file>Aircraft/MPCarrier/Systems/approachview.nas</file>
		</approachview>
		<lsoview>
			<file>Aircraft/MPCarrier/Systems/ferry-lsoview.nas</file>
		</lsoview>
		<Radar>
			<file>Aircraft/MPCarrier/Panels/MP-radar.nas</file>
		</Radar>
		<LSOComms>
			<file>Aircraft/MPCarrier/Systems/lsocomms.nas</file>
		</LSOComms>
		<walkview>
			<file>Aircraft/Generic/WalkView/walkview.nas</file>
		</walkview>
		<walkviews>
			<file>Aircraft/MPCarrier/Systems/ferry-walk-views.nas</file>
		</walkviews>
	</nasal>

</PropertyList>
